@model ShineYatraAdmin.Entity.PrimarySetting

<form class="form-horizontal form-bordered" name="RechargeDefaultSetting" id="RechargeDefaultSetting" onsubmit="return saveRechargeDefaultSetting()">
    <div class="form-body">

        <div class="col-md-12">
            <div class="form-group">
                <label class="control-label col-md-3">PrePaid Margin % </label>
                <div class="col-md-9">
                    <input class="form-control" type="number" step="any" name="prepaid_margin" id="prepaid_margin" required="required" value="@Model.defaultRechargeSetting.prepaid_margin">
                </div>
            </div>

        </div>



        <div class="col-md-12">
            <div class="form-group">
                <label class="control-label col-md-3">PostPaid Margin % </label>
                <div class="col-md-9">
                    <input class="form-control" type="number" step="any" name="postpaid_margin" id="postpaid_margin" required="required" value="@Model.defaultRechargeSetting.postpaid_margin">
                </div>
            </div>

        </div>


        <div class="col-md-12">
            <div class="form-group">
                <label class="control-label col-md-3">DTH Margin % </label>
                <div class="col-md-9">
                    <input class="form-control" type="number" step="any" name="dth_margin" id="dth_margin" required="required" value="@Model.defaultRechargeSetting.dth_margin">
                </div>
            </div>

        </div>

    </div>
    <div class="form-actions">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Apply This</button>
                        <button type="reset" class="btn btn-default">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
