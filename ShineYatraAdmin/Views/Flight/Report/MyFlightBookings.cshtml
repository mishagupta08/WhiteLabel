
@{
    ViewBag.Title = "My Bookings";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<style>
    table.dataTable thead .sorting,
    table.dataTable thead .sorting_asc,
    table.dataTable thead .sorting_desc {
        background: none;
    }
</style>
<link href="~/plugins/bower_components/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
<div class="row">
    <div class="col-lg-12">
        <div class="white-box">
            <h3 class="box-title">My Flight Booking</h3>
            <div class="panel-body text-info" style="background: #F3F3F3;">

                <h3 class="box-title">Filter Criteria</h3>
                <hr class="m-t-0 m-b-20">
                <form id="FlightListFliter" onsubmit="return GetFlightList()">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-3">Result Type</label>
                                <div class="col-md-9">
                                    <label class="text-dark"><input type="radio" name="bookStatus" value="completed">Sucess</label> &nbsp;&nbsp;&nbsp;&nbsp;
                                    <label class="text-dark"><input type="radio" name="bookStatus" value="notcompleted">Fail</label>
                                    <span class="help-block"> </span>
                                </div>
                            </div>


                        </div>
                        <!--/span-->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-3">Flight Type</label>
                                <div class="col-md-9">
                                    <label class="text-dark" ><input type="radio" name="flighttype" value="Both">Both</label> &nbsp;&nbsp;&nbsp;&nbsp;
                                    <label class="text-dark"><input type="radio" name="flighttype" value="domestic">Domestic</label>&nbsp;&nbsp;&nbsp;&nbsp;
                                    <label class="text-dark"><input type="radio" name="flighttype" value="international">International</label>
                                    <span class="help-block"> </span>
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-3">From Date</label>
                                <div class="col-md-9">
                                    @Html.TextBox("fromDate", "", new {id = "fromdateinput", required = "required", @class = "form-control datepicker", placeholder = "dd-mmm-yyyy"})
                                    <span class="help-block"> </span>
                                </div>
                            </div>


                        </div>
                        <!--/span-->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-3">To Date</label>
                                <div class="col-md-9">
                                    @Html.TextBox("toDate", "", new {id = "todateinput", required = "required", @class = "form-control datepicker", placeholder = "dd-mmm-yyyy"})
                                    <span class="help-block"> </span>
                                </div>
                            </div>
                        </div>
                        <!--/span-->
                    </div>


                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-3">&nbsp;</label>
                                <div class="col-md-9">
                                    <button type="submit" class="btn btn-success waves-effect waves-light m-r-10">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div id="Usercontainer">                              
                    
                </div>
            </div>
        </div>
    </div>

<script src="~/plugins/bower_components/jquery/dist/jquery.min.js"></script>
<script src="~/plugins/bower_components/jquery-ui/jquery-ui.min.js"></script>
<script src="~/Script/FlightReport.js"></script>
<script>
    var jq = $.noConflict();
    jq(document).ready(function() {
        // Date Picker
        jq('#fromdateinput').datepicker({
            autoclose: true,
            todayHighlight: true,
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd-M-yy"
        }).datepicker("setDate", new Date());

        jq('#todateinput').datepicker({
            autoclose: true,
            todayHighlight: true,
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd-M-yy"
        }).datepicker("setDate", new Date());

        GetFlightList();
    });
</script>
