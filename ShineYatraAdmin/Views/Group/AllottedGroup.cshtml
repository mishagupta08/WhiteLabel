@using ShineYatraAdmin.Properties;
@model ShineYatraAdmin.Entity.AllottedGroupViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="white-box">
    <h3 class="box-title">Allotted Price Group</h3>
    @Html.HiddenFor(m => m.service_id, new { @id = "CurrentserviceId" })
    @Html.HiddenFor(m => m.allottedGoup.comp_group_id, new { @id = "serviceGroupList" })
    @Html.HiddenFor(m => m.allottedGoup.sub_category, new { @id = "sub_service_name" })       
    <input type="hidden" id="Grouptype" value="allotted"/>
     
       
    @if (Model.service_id!="4")
    {
        <div class="table-responsive">
           
            <div class="col-md-4">
                <div class="form-group">
                    @if (Model != null)
                    {
                        <label>@Model.allottedGoup.comp_group_name</label>
                        
                    }
                </div>
            </div>

            <div id="structure">
                <br /><br /><br /><p>Loading please wait....</p>
            </div>

        </div>
    }
    else
    {
        <section>
            <div class="sttabs tabs-style-bar">
                <nav>
                    <ul class="tablist">
                        <li id="tab-1" onclick="GetAllottedGroup('recharge', 'Prepaid')"><a href="#section-bar-1"><span>PREPAID</span></a></li>
                        <li id="tab-2" onclick="GetAllottedGroup('recharge', 'Postpaid')"><a href="#section-bar-2"><span>POSTPAID</span></a></li>
                        <li id="tab-3" onclick="GetAllottedGroup('recharge', 'DTH')"><a href="#section-bar-3"><span>DTH</span></a></li>
                    </ul>
                </nav>

                <div class="content-wrap">
                    <br /><br />                                        
                    <div class="col-md-4">
                        <label id="displayAllottedGroup">@Model.allottedGoup.comp_group_name</label> 
                    </div>

                    <section id="section-bar-1">
                        <br /><br />
                        <div id="Prepaid_structure">
                            <br /><br /><br /><p>Loading please wait....</p>
                        </div>
                    </section>
                    <section id="section-bar-2">
                        <br /><br />
                        <div id="Postpaid_structure">
                            <br /><br /><br /><p>Loading please wait....</p>
                        </div>
                    </section>
                    <section id="section-bar-3">
                        <br /><br />
                        <div id="DTH_structure">
                            <br /><br /><br /><p>Loading please wait....</p>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    }
</div>




<script src="~/plugins/bower_components/jquery/dist/jquery.min.js"></script>
<script src="~/Script/group.js"></script>

<script>
    $(document).ready(function () {
        $(".preloader").show();
        if ("@Model.service_id" == "4") {
            getStructure("Prepaid_structure");
        }
        else {
            getStructure("structure");
        }
    });
</script>