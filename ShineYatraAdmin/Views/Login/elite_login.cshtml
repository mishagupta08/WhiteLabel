
@using ShineYatraAdmin.Properties;
@model ShineYatraAdmin.Entity.LoginModel
@{
    Layout = null;
}


<div class="preloader">
    <img src="~/images/wheel.gif" height="100" />
</div>

<section id="wrapper" class="login-register">
    <div class="login-box">
        <div class="white-box">
            <form class="form-horizontal form-material" id="loginform" onsubmit="return ValidateLoginUser();">
                <input type="hidden" value="@ViewBag.returnUrl" id="returnUrl" name="returnUrl">
                <h3 class="box-title m-b-20">Sign In</h3>
                <div class="form-group ">
                    <div class="col-xs-12">
                        @Html.TextBoxFor(m => m.username, new { @id = "Username", @required = "", @class = "form-control", @placeholder = "Username" })
                        @*<input class="form-control" type="text" required="" id="Username" placeholder="Username">*@
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        @Html.TextBoxFor(m => m.password, new { @id = "Password", @required = "", @type = "password", @class = "form-control", @placeholder = "Password" })
                        @*<input class="form-control" type="password" required="" id = "Password" placeholder="Password">*@
                    </div>
                </div>
                <div class="form-group" style="margin-bottom:10px !important;">
                    <div class="col-md-12">
                        <div class="checkbox checkbox-primary pull-left p-t-0">
                            <input id="checkbox-signup" type="checkbox">
                            <label for="checkbox-signup"> Remember me </label>
                        </div>
                        <a href="javascript:void(0)" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> Forgot pwd?</a>
                    </div>
                </div>
                <label id="loginError" class="login-error"></label>
                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button type="submit" id="loginButton" on" class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light">@Resources.LoginAccount</button>
                    </div>
                </div>
            </form>
            <form class="form-horizontal" id="recoverform" action="#">
                <div class="form-group ">
                    <div class="col-xs-12">
                        <h3>Recover Password</h3>
                        <p class="text-muted">Enter your Email and instructions will be sent to you! </p>
                    </div>
                </div>
                <div class="form-group ">
                    <div class="col-xs-12">
                        <input class="form-control" type="text" required="" placeholder="Email">
                    </div>
                </div>

                <div class="form-group text-center m-t-20">
                    <div class="col-xs-12">
                        <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="reset">Reset</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>