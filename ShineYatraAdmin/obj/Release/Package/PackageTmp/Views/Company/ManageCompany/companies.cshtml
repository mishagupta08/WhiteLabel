@using ShineYatraAdmin.Properties;
@model ShineYatraAdmin.Entity.CompanyViewModel
@{
    ViewBag.Title = "companies";
    // Layout = "~/Views/Shared/Layout.cshtml";
}

<style>
    .white-popup-block {
        /*max-width: 900px !important;*/
        padding: 0px;
    }

    .mfp-close {
        margin-right: 5px;
    }
</style>

<div class="row">

    <div class="col-lg-12">
        <div class="white-box">
            <h3 class="box-title">@Resources.ManageCompanies</h3>

            <div class="table-responsive">

                <div>
                    <div class="panel">
                        <div class="panel-heading">
                            @*<a href="javascript:alert('add link call here');">*@
                                <button id="insertCompany" data-company-id="0" class="btn btn-outline btn-rounded btn-info">
                                    <i class="icon wb-plus" aria-hidden="true"></i>
                                    Add New
                                </button>
                            @*</a>*@
                            <div class="panel-action">
                                <a href="#" data-perform="panel-collapse">
                                    <button class="btn btn-block btn-info">@Resources.AdvanceSearch</button>
                                </a>
                            </div>
                        </div>

                        <div class="panel-wrapper collapse out">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="white-box">
                                            <h3 class="box-title m-b-0">@Resources.SearchParameters</h3>
                                            <p class="text-muted m-b-30 font-13">@Resources.CustomSearchParameters</p>

                                            <form class="form-horizontal form-material" id="searchCompanyForm" onsubmit="return SearchCompanyList();">
                                                <div class="form-group">
                                                    <label class="col-md-12">@Resources.CompanyName</label>
                                                    <div class="col-md-12">
                                                        @Html.TextBoxFor(m => m.SearchListParameter.CompanyName, new { @required = "", @id = "companyName", @class = "form-control", @placeholder = "Company Name" })
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    @Html.DropDownListFor(m => m.SearchListParameter.Status, new SelectList(Model.SearchStatusList, "Id", "Value"), new { @required = "required", id = "statusDropDown", @class = "form-control" })
                                                    <span id="boardError"></span>
                                                </div>

                                                <button type="submit" class="btn btn-success waves-effect waves-light m-r-10">@Resources.Submit</button>

                                                <a href="#" data-perform="panel-collapse">
                                                    <button type="reset" class="btn btn-inverse waves-effect waves-light">@Resources.Cancel</button>
                                                </a>
                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="container" style="min-height:305px;">
                    @Html.Partial("~/Views/Company/ManageCompany/companyList.cshtml", Model)
                </div>                
            </div>
        </div>
    </div>
</div>


<div id="responsive-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Add Funds To Company</h4>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger waves-effect waves-light">Save changes</button>
            </div>
        </div>
    </div>
</div>

